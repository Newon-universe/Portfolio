<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@id/progress_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintVertical_bias="1"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progressTint="#F4F4F4"
        android:progress="50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/videoView"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/shortsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:background="#00FFFFFF"
        android:text="집사가 밥을 줬다"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:fontFamily="@font/ridi_batang_font"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/videoView"
        android:layout_marginBottom="18dp"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginStart="15sp" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/authorProfile"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/shorts_image_view_author_profile"
        android:scaleType="centerInside"
        android:src="@drawable/mangnanyong"
        app:layout_constraintEnd_toStartOf="@id/author"
        app:layout_constraintStart_toStartOf="@id/shortsTitle"
        app:layout_constraintTop_toBottomOf="@id/shortsTitle"
        android:layout_marginTop="7dp"
        />

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나만고양이없어"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:fontFamily="@font/ridi_batang_font"
        app:layout_constraintTop_toBottomOf="@id/shortsTitle"
        app:layout_constraintBottom_toTopOf="@id/progress_bar"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/authorProfile"
        android:layout_marginStart="7dp"
        />

    <androidx.appcompat.widget.AppCompatToggleButton
        android:id="@+id/subscriptionButton"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:background="@drawable/subscription"
        android:textOff="구독"
        android:textOn="@string/toggle_off"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:fontFamily="@font/ridi_batang_font"
        app:layout_constraintStart_toEndOf="@id/author"
        app:layout_constraintBottom_toTopOf="@id/progress_bar"
        app:layout_constraintTop_toBottomOf="@id/shortsTitle"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="5dp"
        android:layout_marginStart="7dp"
        />

    <ImageButton
        android:id="@+id/createShorts"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/camera"
        android:scaleType="centerInside"
        android:background="#00FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.02"/>

    <ImageButton
        android:id="@+id/back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/backarrow"
        android:scaleType="centerInside"
        android:background="#00FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintVertical_bias="0.02"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/player"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/player_bg"
        app:lottie_fileName="play_stop.json"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible"/>


    <ImageButton
        android:id="@+id/more_option"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/more"
        android:scaleType="centerInside"
        android:background="#00000000"
        app:layout_constraintStart_toStartOf="@id/createShorts"
        app:layout_constraintEnd_toEndOf="@id/createShorts"
        app:layout_constraintTop_toTopOf="@id/createShorts"
        app:layout_constraintBottom_toBottomOf="@id/videoView"
        app:layout_constraintVertical_bias="0.4"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/thumbsUp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#00FFFFFF"
        app:lottie_fileName="thumbs.json"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"
        app:layout_constraintStart_toStartOf="@id/more_option"
        app:layout_constraintEnd_toEndOf="@id/more_option"
        app:layout_constraintTop_toBottomOf="@id/more_option"
        app:layout_constraintBottom_toBottomOf="@id/videoView"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="25dp"
        />

    <TextView
        android:id="@+id/isLikedCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="775"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="@font/ridi_batang_font"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@id/thumbsUp"
        app:layout_constraintEnd_toEndOf="@id/thumbsUp"
        app:layout_constraintTop_toBottomOf="@id/thumbsUp"
        app:layout_constraintBottom_toBottomOf="@id/videoView"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="5dp"/>

    <ToggleButton
        android:id="@+id/thumbsDown"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/thumsdown"
        android:textOff=""
        android:textOn=""
        app:layout_constraintStart_toStartOf="@id/isLikedCount"
        app:layout_constraintEnd_toEndOf="@id/isLikedCount"
        app:layout_constraintTop_toBottomOf="@id/isLikedCount"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/thumbsDownText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="싫어요"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="@font/ridi_batang_font"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@id/thumbsDown"
        app:layout_constraintEnd_toEndOf="@id/thumbsDown"
        app:layout_constraintTop_toBottomOf="@id/thumbsDown"
        app:layout_constraintBottom_toBottomOf="@id/videoView"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="5dp"/>

    <ImageButton
        android:id="@+id/comment"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/comment"
        android:scaleType="centerInside"
        android:background="#00FFFFFF"
        app:layout_constraintStart_toStartOf="@id/thumbsDownText"
        app:layout_constraintEnd_toEndOf="@id/thumbsDownText"
        app:layout_constraintTop_toBottomOf="@id/thumbsDownText"
        app:layout_constraintBottom_toBottomOf="@id/videoView"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/commentText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="14"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="@font/ridi_batang_font"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@id/comment"
        app:layout_constraintEnd_toEndOf="@id/comment"
        app:layout_constraintTop_toBottomOf="@id/comment"
        app:layout_constraintBottom_toBottomOf="@id/videoView"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="5dp"/>

    <ImageButton
        android:id="@+id/share"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/forward"
        android:scaleType="centerInside"
        android:background="#00FFFFFF"
        app:layout_constraintStart_toStartOf="@id/commentText"
        app:layout_constraintEnd_toEndOf="@id/commentText"
        app:layout_constraintTop_toBottomOf="@id/commentText"
        app:layout_constraintBottom_toBottomOf="@id/videoView"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/share_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="공유"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="@font/ridi_batang_font"
        app:layout_constraintStart_toStartOf="@id/share"
        app:layout_constraintEnd_toEndOf="@id/share"
        app:layout_constraintTop_toBottomOf="@id/share"
        app:layout_constraintBottom_toBottomOf="@id/videoView"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="5dp"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/usedMusic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:background="@drawable/music_profile"
        android:src="@drawable/mangnanyoung_music"
        android:scaleType="centerInside"
        app:lottie_fileName="loading.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:layout_constraintStart_toStartOf="@id/share_text"
        app:layout_constraintEnd_toEndOf="@id/share_text"
        app:layout_constraintTop_toBottomOf="@id/share_text"
        app:layout_constraintBottom_toBottomOf="@id/videoView"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="30dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>